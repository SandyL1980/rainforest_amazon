<h1>All Categories</h1>

<ul>
	<li><%= link_to "Add Category", new_category_path %></li>
</ul>


<% @categories.each do |category|%>
<ul>
	<li><%= link_to category.name, category_path(category.id) %> | <%= link_to 'delete category', category, method: :delete, data: { confirm: 'Are you sure?' } %></li>
</ul>
<% end %>
